<%provide(:title,@title)%>
<div class="row">
    <aside class="col-md-4">
      <section class='user_info'>
        <%=render 'shared/user_info'%>
        <%= render 'shared/stats'%>
      </section>
      <% if@users.any?%>
        <div class="user_avatars">
          <%@users.each do|user|%>
          <%=link_to gravatar_for(user, size:30), user%>
          <%end%>
        </div>
      <%end%>
    </aside>
    <div class="col-md-8">
      <h3><%=@title%></h3>
      <%if @users.any? %>
        <ul class="users follow">
          <%=render @users%>
        </ul>
        <%=will_paginate @users%>
      <%end%>
    </div>
</div>
