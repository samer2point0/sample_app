<%= form_for(@micropost) do |f|%>

  <%=render 'shared/error_messages', object: f.object%>

  <div class="field">
    <%=f.text_area :content, placeholder: 'new micropost ...'%>
  </div>
  <%= f.file_field :picture, accept: 'image/png, image/gif, image/jpeg'%>
  <%= f.submit 'Post', class:'btn btn-primary'%>
<%end%>
<script type="text/javascript" >
  $('#micropost_picture').bind('change',function(){
    var size_in_megabytes=this.file[0].size/1024/1024;
    alert('max file size is 5 megabytes') if(size_in_megabytes>5)
  });
</script>
