<li id="micropost-<%= micropost.id %>">
  <%=link_to gravatar_for(micropost.user), micropost.user %>
  <span class='user'><%=link_to micropost.user.name, micropost.user%></span>
  <span class='content'><%=micropost.content%></span>
  <span class='timestamp'> Posted <%=time_ago_in_words(micropost.created_at)%> ago.</span>
  <%if correct_user?(micropost.user)%>
    <span><%= link_to 'delete', micropost_path(micropost), method: :delete, data: {confirm: 'you sure?'} %></span>
  <%end%>
</li>
